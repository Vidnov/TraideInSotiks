<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SreenTestBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ScreenActivity">

    <TextView
        android:id="@+id/GreetingScreenTestBackgraund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Изображение на вашем экране будет меняться  для проверки целостности "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/WarningTestScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="После запуска теста внимательно проверьте экран на наличие деффектов"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GreetingScreenTestBackgraund" />

    <Button
        android:id="@+id/TestScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:onClick="testScreen"
        android:text="Начать Тест"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WarningTestScreen"
        app:layout_constraintVertical_bias="0.969" />

    <ImageView
        android:id="@+id/ImgGreeetingTestScreen"
        android:layout_width="337dp"
        android:layout_height="407dp"
        android:background="@drawable/ic_baseline_device_unknown_24"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/TestScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WarningTestScreen"
        app:layout_constraintVertical_bias="0.298"
        app:srcCompat="@drawable/ic_baseline_device_unknown_24"
        tools:srcCompat="@drawable/ic_baseline_device_unknown_24" />

</androidx.constraintlayout.widget.ConstraintLayout>